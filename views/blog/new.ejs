<% include ../partials/header %>

<div class="container">
    <div class="row">
        
        <h1 class="create">Create a New Post</h1>
        
        <div style="width: 30%; margin: 30px auto;">
            
            <form action="/blog" method="POST"> 
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="author" placeholder="author">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" id="blogContent" type="text" name="content" placeholder="Blog body content">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            
            <a href="/blog" style="text-align:center; color:#519092">back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer%>